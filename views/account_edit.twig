{% extends "__layout.twig" %} {% block content %}
<div class="container">
  {% if message %}
  <div class="alert alert-info">
    {{ message }}
    <a href="/">Вернуться на главную</a>
  </div>
  {% else %}
  <form enctype="multipart/form-data" method="POST" class="row g-3">
    <div class="d-flex flex-column">
    <div class="col-12">
      <label class="form-label text-white" style="font-size: 19px">ФИО</label>
      <input
        type="text"
        class="form-control"
        name="name"
        value="{{ edit.name }}"
        style="font-size: 19px"
      />
    </div>
    <div class="col-12">
      <label class="form-label text-white" style="font-size: 19px"
        >Населённый пункт</label
      >
      <select class="form-control" name="city" style="font-size: 19px">
        {% for reg in regions %}
        <option value="{{ reg[0] }}" {% if reg[0] == edit.city %} selected {% endif %}>
          {{ reg[0] }}
        </option>
        {% endfor %}
      </select>
    </div>
    <div class="col-12">
      <label class="form-label text-white" style="font-size: 19px"
        >Адрес проживания</label
      >
      <input
        type="text"
        class="form-control"
        name="address"
        value="{{ edit.address }}"
        style="font-size: 19px"
      />
    </div>
    <div class="col-12">
      <label class="form-label text-white" style="font-size: 19px"
        >Почта</label
      >
      <input
        type="text"
        class="form-control"
        name="email"
        value="{{ edit.email }}"
        style="font-size: 19px"
      />
    </div>
    <div class="col-12">
      <label class="form-label text-white" style="font-size: 19px"
        >Телефон</label
      >
      <input
        type="text"
        class="form-control"
        name="phone"
        value="{{ edit.phone }}"
        style="font-size: 19px"
      />
    </div>
    <div class="mt-3 col-12 text-end">
      <button type="submit" class="btn-new">Изменить</button>
    </div>
  </div>
  </form>
  {% endif %}
</div>
{% include('footer.twig') %} {% endblock %}
