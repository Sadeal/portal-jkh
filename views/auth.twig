{% block content %}
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
  crossorigin="anonymous"
/>
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Вход</title>
<form class="vh-100 gradient-custom" method="POST">
  <div class="container py-5 h-100" style="height: 20vh">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-primary text-white" style="border-radius: 1rem">
          <a
            class="text-start btn btn-light mt-2"
            href="/"
            style="margin-left: 15; width: fit-content"
            >Вернуться на главную</a
          >
          <div class="card-body p-5 text-center">
            <div class="md-5 mt-md-4 pb-1">
              <h2 class="fw-bold mb-2 text-uppercase">Вход</h2>
              <p class="text-white-50 mb-5">
                Пожалуйста, введите свой логин и пароль!
              </p>
              {% if message %}
              <div class="alert alert-danger">
                {{ message }}
              </div>
              {% endif %}
              <div class="form-outline form-white mb-4">
                <input
                  type="text"
                  class="form-control form-control-lg"
                  name="login"
                  value="{{ logData }}"
                />
                <label class="form-label" for="typeLoginX">Логин</label>
              </div>

              <div class="form-outline form-white mb-4">
                <input
                  type="password"
                  name="pass"
                  class="form-control form-control-lg"
                />
                <label class="form-label" for="typePasswordX">Пароль</label>
              </div>

              <button class="btn btn-success btn-lg px-5" type="submit">
                Войти
              </button>
              <a
                class="btn btn-outline-light btn-lg px-5 mt-2"
                type="submit"
                href="/register"
              >
                Зарегистрироваться
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

{% endblock %}
